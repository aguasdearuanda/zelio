<!-- Start content -->
<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-12">
        <h4 class="header-title m-t-0 m-b-20">Justificativa</h4>
      </div>
    </div>

    <div class="row">
      <div class="col-12">
        <div class="table-responsive">
          <table id="datatable" class="table table-bordered">
            <thead>
              <tr>
                <th style="width: 10%;">Nome</th>
                <th style="width: 10%;">Data</th>
                <th style="width: 30%;">Descrição</th>
                <th style="width: 5%;">Situação</th>
                <th style="width: 5%;">Ação</th>
              </tr>
            </thead>
            <tbody>
              <% if @justifications.nil? %>
              <tr>
                <td style="width: 30%;"> Não há justificativas cadastradas </td>
              </tr>
              <% else %>
                <% @justifications.each do |justification| %>
                <tr>
                  <td><%= justification.name %></td>
                  <td><%= justification.date.strftime("%d-%m-%Y") %></td>
                  <td><%= justification.description %></td>
                  <td><%= label_for_status(justification.status) %></td>
                  <td><%= link_to 'Detalhes', admin_justification_path(justification), class: 'btn btn-info btn-sm' %></td>
                </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <!-- end row -->
<!-- container -->

<!-- Footer -->
<div class="footer">
  <%= render 'common/footer' %>
</div>
<!-- END Footer -->
</div>
