<%= javascript_include_tag "internal/absences-modal" %>

<!-- Start content -->
<div class="content">
  <div class="container-fluid">
    <h4 class="m-b-20 header-title">Detalhes da turma</h4>
    <div class="row m-b-20">
      <div class="col-sm-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Nome</h5>
            <p class="card-text"><%= @klass.name %></p>
          </div>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Professor(a)</h5>
            <p class="card-text"><%= @klass.teachers.map(&:name).to_sentence %></p>
          </div>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Total de Aulas</h5>
            <p class="card-text"><%= @klass.attendances.size %></p>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="table-responsive">
          <table id="datatable-without-buttons" class="table table-bordered">
            <thead>
              <tr>
                <th>Nome</th>
                <th>Situação</th>
                <th>Faltas</th>
              </tr>
            </thead>
            <tbody>
              <% @klass.students.each do |student| %>
                <tr>
                  <td>
                    <%= student.name %>
                  </td>
                  <td align="center">
                    <%= student.situations.where(klass_id: @klass.id).empty? ? label_for_klass_student_status('ativo') : label_for_klass_student_status('desativado') %>
                  </td>
                  <td>
                    <div class="col-lg-12">
                      <!-- Button trigger modal -->
                      <button type="button" class="btn btn-sm btn-default"
                        data-toggle="modal"
                        data-target="#historyModal"
                        data-name="<%= student.name %>"
                        data-klasses="<%= klasses(student, @attendances, @klass) %>"
                        data-absences="<%= absences(student, @attendances, @klass) %>"
                        data-justifications="<%= justifications(student, @klass) %>">
                        Visualizar
                      </button>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="col-md-10">
        <%= link_to 'Editar', edit_admin_klass_path(@klass), class: "btn btn-success" %>
        <%= link_to 'Voltar', :back, class: "btn btn-link" %>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" tabindex="-1" role="dialog" aria-hidden="true" id="historyModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="historyModalLabel">Faltas</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <strong><p id="name"></p></strong>
        <div class="row">
          <div class="col-md-4">Aulas:</div>
          <div class="col-md-6"><strong><span id="klasses"></span></strong></div>
        </div>
        <br>
        <div class="row">
          <div class="col-md-4">Faltas:</div>
          <div class="col-md-6"><strong><span id="absences"></span></strong></div>
        </div>
        <br>
        <div class="row">
          <div class="col-md-4">Justificativas Aceitas:</div>
          <div class="col-md-6"> <strong><span id="justifications"></span></strong></div>
        </div>
        <br>
        <div class="row">
          <div class="col-md-4">Total:</div>
          <div class="col-md-6"><strong><span id="total" class="text-danger"></span></strong></div>
        </div>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
      </div>
    </div>
  </div>
</div>
<!-- Modal -->
