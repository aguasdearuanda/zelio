<div class="row">
  <div class="col-md-6">
    <%= simple_form_for [:admin, @student] do |f| %>
    <div class="form-group">
      <div class="col-md-10">
        <%= f.input :name, label: 'Nome' %>
      </div>
      <div class="col-md-10">
        <%= f.input :email, label: 'Email' %>
      </div>
      <div class="col-md-10">
        <%= f.input :phone, label: 'Celular' %>
      </div>
      <div class="col-md-10">
        <%= f.input :birthday, as: :date, label: 'Data de nascimento', html5: true %>
      </div>
      <div class="col-md-10">
        <label for="password">Senha</label> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
      </div>
      <div class="col-md-10"><br />
        <label for="password">Confirmação de senha</label><br />
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>
      <div class="col-md-10"><br />
        <%= f.association :klasses, as: :check_boxes , label: 'Turmas', input_html: { multiple: true }%>
      </div>
    </div>
    <%= f.submit 'Salvar', class: "btn btn-success" %>
    <%= link_to 'Voltar', :back, class: "btn btn-link" %>
    <% end %>
  </div>
</div>
