<div class="row">
  <div class="col-md-6">
    <%= simple_form_for [:admin, @teacher] do |f| %>
    <div class="form-group">
      <div class="col-md-10">
        <%= f.input :name %>
      </div>
      <div class="col-md-10">
        <%= f.input :email %>
      </div>
      <div class="col-md-10">
        <%= f.input :phone %>
      </div>
      <div class="col-md-10">
        <%= f.input :birthday, as: :date, html5: true %>
      </div>
      <div class="col-md-10">
        <%= f.association :klasses, as: :check_boxes , input_html: { multiple: true }%>
      </div>
    </div>
    <%= f.submit 'Salvar', class: "btn btn-success" %>
    <%= link_to 'Voltar', :back, class: "btn btn-link" %>
  <% end %>
  </div>
</div>
